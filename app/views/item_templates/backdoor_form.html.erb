<h1>Add a new item</h1>

<form action="/make_a_new_item" method="post">
  <div>
    <label for="link_url_box">
      Link URL 
    </label>

    <input id="link_url_box" name="link_url_param" placeholder="Enter a URL..." type="text">
  </div>

  <div>
    <label for="link_description_box">
      Link Description
    </label>

    <input id="link_description_box" name="link_description_param" placeholder="Enter a link description..." type="text">
  </div>

  <div>
    <label for="thumbnail_url_box">
      Thumbnail URL
    </label>

    <input id="thumbnail_url_box" name="thumbnail_url_param" placeholder="Enter a thumbnail URL..." type="text">
  </div>

  <button>Create item</button>

</form>  
